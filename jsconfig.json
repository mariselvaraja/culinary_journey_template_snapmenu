{
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
